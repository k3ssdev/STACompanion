<!-- fragment_dados.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Contenedor para Dados de Desafío (d6) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Dados de Desafío"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/buttonMinusD6"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:textSize="24sp"
 />

                    <EditText
                        android:id="@+id/editTextNumberOfDiceD6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="22dp"
                        android:backgroundTint="@android:color/transparent"
                        />

                    <Button
                        android:id="@+id/buttonPlusD6"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Contenedor para D20 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="D20"
                    android:textSize="26sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonMinusD20"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:textSize="24sp" />


                    <EditText
                        android:id="@+id/editTextNumberOfDiceD20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="22dp"
                        android:backgroundTint="@android:color/transparent" />

                    <Button
                        android:id="@+id/buttonPlusD20"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Contenedor para resultado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            <Button
                android:id="@+id/buttonRollDice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tirar Dados" />

            <ImageView
                android:id="@+id/imageViewDice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textViewDiceResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>